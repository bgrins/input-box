{
  "name": "input-box",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:tiptap": "vite build --config vite.config.tiptap.js",
    "preview": "vite preview",
    "prepare": "husky",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm test && npm run test:e2e"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": "prettier --write"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@open-wc/testing": "^4.0.0",
    "@playwright/test": "^1.54.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/ui": "^3.2.4",
    "csv-parse": "^6.1.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@tiptap/core": "^3.1.0",
    "@tiptap/extension-bubble-menu": "^3.1.0",
    "@tiptap/extension-code-block-lowlight": "^3.1.0",
    "@tiptap/extension-floating-menu": "^3.1.0",
    "@tiptap/extension-link": "^3.1.0",
    "@tiptap/extension-mention": "^3.6.2",
    "@tiptap/extension-placeholder": "^3.1.0",
    "@tiptap/starter-kit": "^3.1.0",
    "@tiptap/suggestion": "^3.6.2",
    "lit": "^3.3.1",
    "lowlight": "^3.3.0"
  }
}
